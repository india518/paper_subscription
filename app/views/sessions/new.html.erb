<h1> Welcome to the Newspaper Subscription Manager! </h1>
	
<p>Log in as an existing user</p>

<%= form_for(@user, :url => '/sessions') do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	
	<%= f.label :password %>
	<%= f.password_field :password %>
	
	<%= f.submit "Log In" %>
	
<% end %>

<p>Don't have an account? Create a <%= link_to "New Account", new_user_url %> here!</p>